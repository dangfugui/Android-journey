<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/adc_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_back" />

         

    <LinearLayout
            android:id="@+id/adc_Shoplist_shanghuleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/adc_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="user set"
                android:textColor="#FF8C00"
                android:textSize="18sp" />
       
        </LinearLayout>

     <Button
         android:id="@+id/adc_btn_ok"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:textColor="#FF8C00"
         android:paddingRight="10dp"
         android:text="accomplish" />
    
    </RelativeLayout>

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@+id/titlerelativelayout"
       android:layout_centerHorizontal="true"
       android:padding="10dp"
       android:orientation="vertical"
       >
		
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="userheader"
                android:textColor="#666666"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/adc_img_header"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/bad_face_lib" />

        </LinearLayout>
    	 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:orientation="horizontal" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="name"
                android:textColor="#666666"
                android:textSize="15sp" />

            <EditText
                 android:id="@+id/adc_edt_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#666666"
                android:textSize="15sp" />

        </LinearLayout>
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:orientation="horizontal" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="introduce"
                android:textColor="#666666"
                android:textSize="15sp" />

            <EditText
                 android:id="@+id/adc_edt_introduce"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="introduce"
                android:textColor="#666666"
                android:textSize="15sp" />

        </LinearLayout>
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:orientation="horizontal" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="phone"
                android:textColor="#666666"
                android:textSize="15sp" />

            <EditText
                 android:id="@+id/adc_edt_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textColor="#666666"
                android:textSize="15sp" />

        </LinearLayout>
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4C4C4"
        android:orientation="horizontal" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="country"
                android:textColor="#666666"
                android:textSize="15sp" />

            <EditText
                 android:id="@+id/adc_edt_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="country"
                android:textColor="#666666"
                android:textSize="15sp" />

        </LinearLayout>    
    
    
    </LinearLayout>
       
       
	
</RelativeLayout>