<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >
	
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="60dp" >

         <ImageView
             android:id="@+id/abi_img_friendsheard"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_alignParentLeft="true"
             android:background="@drawable/input_normal"
        	 android:src="@drawable/shop_photo_frame" />
         
		  <RelativeLayout
		      android:layout_width="fill_parent"
		      android:layout_height="60dp"
		      android:layout_toRightOf="@+id/abi_img_friendsheard" >
	         
		        <TextView
		             android:id="@+id/abi_txt_name"
		             android:layout_width="wrap_content"
		             android:layout_height="30dp"
		             android:layout_alignParentTop="true"
		             android:layout_alignParentLeft="true"
		             android:text="name"
		             android:textColor="#1fe22a"
		             android:textSize="24dp" />
        		 <TextView
        		      android:id="@+id/abi_txt_title"
		             android:layout_width="wrap_content"
		             android:layout_height="30dp"
		             android:layout_alignParentBottom="true"
		             android:layout_alignParentLeft="true"
		             android:textSize="20dp"
		             android:text="title" />
        		  <TextView
        		     android:id="@+id/abi_txt_time"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_alignParentTop="true"
		             android:layout_alignParentRight="true"
		             android:text="time" />
        		  <ImageView
        		    android:layout_toLeftOf="@+id/abi_txt_distance"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dp"
		            android:src="@drawable/loc" />
        		 <TextView
        		     android:id="@+id/abi_txt_distance"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_alignParentBottom="true"
		             android:layout_alignParentRight="true"
		             android:text="km" />
				      
	        </RelativeLayout>
     
     </RelativeLayout>
    
    <LinearLayout 
         android:layout_width="fill_parent"
    	 android:layout_height="100dp"
    	 android:orientation="horizontal" >
		  <ImageView 
		      android:id="@+id/abi_img_image1"
		      android:layout_width="100dp"
		      android:layout_height="100dp"
		      android:layout_weight="1"
		      android:src="@drawable/shop_photo_frame"
		      android:background="@drawable/input_normal"/>
		   <ImageView 
		      android:id="@+id/abi_img_image2"
		      android:layout_width="100dp"
		      android:layout_height="100dp"
		      android:layout_weight="1"
		       android:background="@drawable/input_normal"
		      android:src="@drawable/shop_photo_frame"/>
		    <ImageView 
		      android:id="@+id/abi_img_image3"
		      android:layout_width="100dp"
		      android:layout_height="100dp"
		      android:layout_weight="1"
		       android:background="@drawable/input_normal"
		      android:src="@drawable/shop_photo_frame"/>
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/abi_txt_content"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="content"   
        android:textColor="#8d8d8d"
        android:lineSpacingMultiplier="1.5"
    />

</LinearLayout>
